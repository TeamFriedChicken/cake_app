<div class="container">
	<h3 class="admin_main_visual">ジャンル編集</h3>

	<% if @genre.errors.any? %>
	   <p>エラーでーす。</p>
	<% end %>

	<%= form_with model: @genre, url: admin_genre_path, local: true do |genre| %>
	  <%= genre.label :ジャンル名 %>
	  <%= genre.text_field :name %>
	  <%= genre.radio_button :is_active, :true,checked: true %>
	  <%= genre.label :is_active, "有効", {value: :true} %>
	  <%= genre.radio_button :is_active, :false,checked: false %>
	  <%= genre.label :is_active, "無効", {value: :false} %>
	  <%= genre.submit "変更を保存する", class:"btn btn-primary" %>
	<% end %>
</div>