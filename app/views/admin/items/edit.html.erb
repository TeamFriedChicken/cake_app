<div class="container">
  <div class="row">
    <h3>商品編集</h3>
  </div>
  <div class="row">

    <%= form_with model: @item, url: admin_item_path, local: true do |item| %>
      <%= item.attachment_field :image %>
      <table class="table">
        <tr><th>商品名</th><td><%= item.text_field :name %></td></tr>
        <tr><th>商品説明</th><td><%= item.text_area :explanation %></td></tr>
        <tr><th>ジャンル</th><td><%= item.collection_select :genre_id, Genre.where(is_active: "true"), :id, :name %></td>
        <tr><th>税抜価格</th><td><%= item.text_field :price %>円</td></tr>
        <tr><th>販売ステータス</th><td><%= item.select :is_active, [["販売中", "0"], ["売り切れ中", "1"]], include_blank: "選択して下さい" %></td>
      </table>
        <%= item.submit "変更を保存する", class:"btn btn-primary item" %>
    <% end %>
  </div>
</div>