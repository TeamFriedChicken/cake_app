<div class="container">
  <h1>商品一覧</h1>
  <div class="text-right">
    <%= link_to new_admin_item_path, class:"btn btn-default" do %>
      <i class="nav-link active text-right"></i>+</li>
    <% end %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item) %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active == true ? "売り切れ" : "販売中"  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>