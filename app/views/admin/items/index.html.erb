<div class="container">
  <h1 class="admin_main_visual">商品一覧</h1>
  <div class="text-right">
    <%= link_to new_admin_item_path, class:"btn btn-default" do %>
      <i class="nav-link active text-right"></i>+</li>
    <% end %>
  </div>
  <div class="col-xs-2"></div>
  <div class="col-xs-8">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
          <% @search_items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item) %></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td><%= item.is_active == true ? "販売中" : "売り切れ"  %></td>
            </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>