<div class="container">
  <h1 class="admin_main_visual">会員一覧</h1>
  <div class="row">
    <div class="col-xs-2"></div>
      <div class="col-xs-6">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @search_members.each do |member| %>
              <tr>
                <td><%= member.id %></td>
                <td>
                  <%= link_to admin_member_path(member) do %>
                    <%= member.full_name %>
                  <% end %>
                </td>
                <td><%= member.email %></td>
                <% if member.is_delete == true %>
                  <td><%= "退会済" %></td>
                <% else member.is_delete == false %>
                  <td><%= "有効会員" %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>
