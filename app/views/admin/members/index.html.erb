<div class="row">
  <div class="col-xs-2"></div>
    <div class="col-xs-6">

      <h3 class="sub-title">会員一覧</h3>

      <table>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        <tr>
      <% @members.each do |member| %>
        <tr>
          <td><%= member.id %></td>
          <td>
            <%= link_to admin_member_path(member) do %>
              <%= member.first_name %>
              <%= member.last_name %>
            <% end %>
          </td>
          <td><%= member.email %></td>
          <% if member.is_delete == true %>
            <td><%= "退会済" %></td>
          <% else member.is_delete == false %>
            <td><%= "有効会員" %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
</div>