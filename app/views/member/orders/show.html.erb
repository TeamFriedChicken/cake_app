<div class="container">
  <h2>注文履歴詳細</h2>
  <div class="row">
  
    <div class="col-xs-7">
      <h4><strong>注文情報</strong></h4>
      <table class="table">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            <%= @order.postcode %>
            <%= @order.address %>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status %></td>
        </tr>
      </table>
    </div>

    <div class="col-xs-3">
      <h4><strong>請求情報</strong></h4>
      <table class="table">
        <tr>
          <th>商品合計</th>
          <td><%= @order.total_price.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= (@order.total_price + @order.postage).to_s(:delimited) %></td>
        </tr>
      </table>
    </div>

    <div class="col-xs-8">
      <h4><strong>注文内容</strong></h4>
      <table class="table">
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
        <tr>
          <% @order.order_details.each do |order_details| %>
          
            <td><%= order_details.item.name %></td>
            <td><%= order_details.purchase %></td>
            <td><%= order_details.quantity %></td>
            <td><%= (order_details.purchase * order_details.quantity).to_s(:delimited) %></td>

          <% end %>
        </tr>
      </table>
    </div>

  </div>
</div>
  