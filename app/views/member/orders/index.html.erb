<h1>Member::Order#index</h1>

<label>注文履歴一覧</label>
<table>
		<thead>
			<tr>
				<th>注文日</th>
				<th>配送先</th>
				<th>注文商品</th>
				<th>支払金額</th>
				<th>ステータス</th>
				<th>注文詳細</th>
			</tr>
		</thead>
	<% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.postcode %><br><%= order.address %><br><%= order.name %><br></td>
	  <% order.order_details.each do |order_detail| %>
	    <td><%= order_detail.item.name %></td>
	  <% end %>
        <td><%= order.total_price %></td>
        <td><%= order.status %></td>
        <td><%= link_to "表示する", order_path(order) %>
      </tr>
    <% end %>

</table>