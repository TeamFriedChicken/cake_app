<h3>ショッピングカート</h3>
<!-- <%= button_to 'カートを空にする', @cart, method: :delete, data: {confirm: 'カートを空にして本当によろしいですか？'}, class: 'fbtn' %> -->
<div class="container">
  <div class="row">
    <table class="table">
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
      <tr>
        <% @cart_items.each do |cart_item| %>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.price %></td>
          <td><%= cart_item.quantity %></td>
          <td><%= link_to "削除", members_cart_items_path, class:"btn btn-danger", method: :delete, "data-confirm" => "Are you sure?" %></td>
        <% end %>
      </tr>
    </table>
  </div>
</div>


