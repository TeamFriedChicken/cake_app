<h4>登録情報編集</h4>

<%= form_with model: @member, url: members_path do |f| %>

	<div class="field">
		名前
		(姓)
		<%= f.text_field :first_name %>
		(名)
		<%= f.text_field :last_name %>
	</div>
	<div class="field">
		フリガナ
		(セイ)
		<%= f.text_field :kana_first_name %>
		(メイ)
		<%= f.text_field :kana_last_name %>
	</div>
	<div class="field">
		メールアドレス
		<%= f.text_field :email %>
	</div>
	<div class="field">
		郵便番号（ハイフンなし）
		<%= f.text_field :postcode %>
	</div>
	<div class="field">
		住所
		<%= f.text_field :address %>
	</div>
	<div class="field">
		電話番号（ハイフンなし）
		<%= f.text_field :phone_number %>
	</div>
	<div class="actions">
		<%= f.submit "編集内容を保存する" %>
	</div>
<% end %>

	<%= link_to "退会する", members_resignation_path, class: "btn-sm btn-danger" %>


