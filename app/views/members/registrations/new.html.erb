<div class= "col-xs-4"></div>
<div class="col-xs-6">


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h3 class="glay-label">
      <%= f.label :sign_up %>
    </h3>
    <%= render "members/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :"名前" %>
      <%= f.label :first_name %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      <%= f.label :last_name %>
      <%= f.text_field :last_name, autocomplete: "last_name" %>
    </div>
    <div class="field">
      <%= f.label :"フリガナ" %>
      <%= f.label :kana_first_name %>
      <%= f.text_field :kana_first_name, autocomplete: "kana_first_name" %>
      <%= f.label :kana_last_name %>
      <%= f.text_field :kana_last_name, autocomplete: "kana_last_name" %>
    </div>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: "email" %>
    </div>
    <div class="field">
      <%= f.label :postcode %>
      <%= f.text_field :postcode, autocomplete: "postcode" %>
    </div>

    <div class="field">
      <%= f.label :address %>
      <%= f.text_field :address, autocomplete: "address" %>
    </div>

    <div class="field">
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number, autocomplete: "phone_number" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit t('.sign_up'),class: "btn btn-success" %>
    </div>
  <% end %>

  <h3 class="glay-label">
    既に登録済みの方
  </h3>
  <%= render "members/shared/links" %><p>からログインしてください。</p>
</div>
